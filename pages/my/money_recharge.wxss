.main {
  background-color: #eee;
  height: 1360rpx;
}
.main .content {
  background-color: #eee;
  padding: 20rpx 20rpx;
}
.main .content .money_tit {
  padding: 25rpx 35rpx;
  font-weight: bold;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.main .content .money_tit view:nth-child(2) {
  color: #e99aa1;
}
.main .content .nav {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  font-size: 30rpx;
}
.main .content .nav .nav_item {
  width: 33%;
  text-align: center;
}
.main .content .nav .nav_item view {
  width: 180rpx;
  height: 80rpx;
  margin: 15rpx auto;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #fff;
  letter-spacing: 3rpx;
  font-weight: bold;
  border: 2rpx solid #eadadc;
  color: #e99aa1;
}
.main .content .nav .select_item view {
  background-color: #1f9244;
  color: #fff;
}
.main .pay {
  background-color: #eee;
  padding: 20rpx 20rpx;
}
.main .pay view:nth-child(1) {
  font-size: 35rpx;
  font-weight: bold;
  padding: 20rpx 20rpx;
  background-color: #fff;
}
.main .pay view:nth-child(2) {
  font-size: 32rpx;
  font-weight: bold;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
}
.main .pay view:nth-child(2) image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.main .withdrawal button {
  width: 800rpx;
  height: 90rpx;
  line-height: 90rpx;
  letter-spacing: 5rpx;
  background-color: #1f9244;
  color: #fff;
  position: fixed;
  bottom: 0;
  border-radius: 0;
  font-size: 30rpx;
}
.main .footer {
  height: 250rpx;
}
.main .warp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.main .rect {
  width: 70%;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
}
.main .rect .picek {
  padding: 0 20rpx 20rpx 20rpx;
}
.main .rect .picek .top_lsis {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-weight: bold;
  border-bottom: 1px solid #dcdcdc;
}
.main .rect .hist_po {
  width: 100%;
  height: 500rpx;
  overflow: auto;
}
.main .rect .btn {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #dcdcdc;
  text-align: center;
}
.main .rect .btn view:nth-child(1) {
  color: #000;
  border-right: 1px solid #dcdcdc;
  width: 49%;
}
.main .rect .btn view:nth-child(2) {
  color: #2ebccc;
  width: 50%;
}

