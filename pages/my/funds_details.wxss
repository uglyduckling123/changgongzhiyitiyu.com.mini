.home {
  background-color: #f8f8f8;
  height: 1400rpx;
  padding: 0 30rpx;
}
.home .month {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  font-size: 33rpx;
  font-weight: bold;
}
.home .month view:nth-child(1) {
  margin-top: 20rpx;
}
.home .month view:nth-child(2) {
  display: flex;
}
.home .month view:nth-child(2) button {
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f8f8f8;
}
.home .month view:nth-child(2) button::after {
  border: none;
}
.home .month view:nth-child(2) image {
  width: 33rpx;
  height: 33rpx;
  margin-top: 20rpx;
}
.home .content .list {
  padding: 15rpx 15rpx;
  background: #fff;
}
.home .content .list .list_item {
  padding: 10rpx 20rpx;
}
.home .content .list .list_item .list_pop {
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.home .content .list .list_item .list_pop view:nth-child(1) {
  width: 50%;
}
.home .content .list .list_item .list_pop view:nth-child(2) {
  width: 50%;
  text-align: right;
}
.home .content .list .list_item view:nth-child(2) {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #cdcdcd;
}
.home .more {
  height: 150rpx;
}
.home .more .more_content {
  width: 440rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #d9d9d9;
  padding-left: 120rpx;
  margin-left: 150rpx;
  margin-top: 20rpx;
}
.home .footer {
  height: 100rpx;
}

