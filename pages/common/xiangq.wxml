<view class="main">
    <view class="main_box">
        <view class="list_box">
            <view class="top_img">
                <swiper indicator-dots="{{true}}" autoplay="{{true}}">
                    <block wx:for="{{banner.banner_image}}" wx:for-item="item" wx:for-index="index" wx:key="index">
                        <swiper-item>
                            <image src="{{item}}" class="_img"></image>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
            <view class="title">
                <view class="name">
                    {{''+banner.name+''}}
                </view>
                <view class="arrtive">
                    <u-icon vue-id="2a616a23-1" name="order" bind:__l="__l"></u-icon>
                    <label class="_span">
                        {{banner.business_time}}
                    </label>
                </view>
                <view class="phone">
                    <u-icon vue-id="2a616a23-2" name="phone" bind:__l="__l"></u-icon>
                    <label class="_span">
                        {{banner.mobile}}
                    </label>
                </view>
            </view>
        </view>
        <view class="money-time">
            <view data-event-opts="{{[['tap',[['openList',['$event']]]]]}}" class="host-time" bindtap="__e">
                <image src="{{$root.m0}}" alt class="_img"></image>
                <view class="icon_tit">
                    {{''+(time==''?'请选择日期':time)+''}}
                </view>
            </view>
            <u-calendar vue-id="2a616a23-3" bind:__l="__l"></u-calendar>
            <u-select vue-id="2a616a23-4" mode="single-column" list="{{data1}}" label-name="date" value-name="id" value="{{show}}" data-event-opts="{{[['^confirm',[['change']]],['^input',[['__set_model',['','show','$event',[]]]]]]}}" bind:confirm="__e" bind:input="__e" bind:__l="__l"></u-select>
            <u-line class="u-line" vue-id="2a616a23-5" length="90%" margin="20rpx 40rpx" bind:__l="__l"></u-line>
            <view class="changdi">
                <image src="{{$root.m1}}" alt class="_img"></image>
                <view class="changdis">
                    <block wx:for="{{name}}" wx:for-item="item" wx:for-index="index" wx:key="index">
                        <view data-event-opts="{{[['tap',[['tab',['$0','$1'],[[['name','',index,'id']],[['name','',index]]]]]]]}}" class="{{[indexp==item.id?'tab':'']}}" bindtap="__e">
                            {{''+item.name+''}}
                        </view>
                    </block>
                </view>
            </view>
        </view>
        <view data-event-opts="{{[['tap',[['goList',['$event']]]]]}}" class="btn" bindtap="__e">
            <button>
                立即预约
            </button>
        </view>
        <block wx:if="{{tanchu}}">
        <view class="tanchu">
            <view class="box">
                <view class="box-tit">
                    添加预约人信息
                </view>
                <view class="input">
                    <u-field bind:input="__e" vue-id="7121c692-3" label="姓名" placeholder="请填写姓名" focus="false" value="{{user_name}}" data-event-opts="{{[['^input',[['__set_model',['','user_name','$event',[]]]]]]}}" bind:__l="__l"></u-field>
                     <u-field bind:input="__e" vue-id="7121c692-6" label="身份证" placeholder="请输入身份证" value="{{identification}}" data-event-opts="{{[['^input',[['__set_model',['','identification','$event',[]]]]]]}}" bind:__l="__l"></u-field>
                    <u-field bind:input="__e" vue-id="7121c692-4" label="手机号" placeholder="请填写手机号" maxlength="11" value="{{mobile}}" data-event-opts="{{[['^input',[['__set_model',['','mobile','$event',[]]]]]]}}" bind:__l="__l"></u-field>
                    <u-field bind:input="__e" vue-id="7121c692-5" label="居住社区" placeholder="请输入居住社区" value="{{address}}" data-event-opts="{{[['^input',[['__set_model',['','address','$event',[]]]]]]}}" bind:__l="__l"></u-field>

                </view>
                <view class="button">
                    <button data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" bindtap="__e">
                        取消
                    </button>
                    <button data-event-opts="{{[['tap',[['qued',['$event']]]]]}}" class="qued" bindtap="__e">
                        确定
                    </button>
                </view>
            </view>
        </view>
        </block>
        <view class="titles">
            <view class="title_tops _p">
                场馆介绍：
            </view>
            <u-parse vue-id="2a616a23-6" html="{{banner.content}}" bind:__l="__l"></u-parse>
        </view>
        <u-toast class="vue-ref" vue-id="2a616a23-7" data-ref="uToast" bind:__l="__l"></u-toast>
        <u-modal vue-id="2a616a23-8" content="{{content}}" value="{{showwo}}" data-event-opts="{{[['^confirm',[['confirm']]],['^input',[['__set_model',['','showwo','$event',[]]]]]]}}" bind:confirm="__e" bind:input="__e" bind:__l="__l"></u-modal>
    </view>
</view>
