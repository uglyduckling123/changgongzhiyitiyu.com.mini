.main {
  width: 100%;
  min-height: 100vh;
  background-color: #F8F8F8;
}
.main .main_box {
  padding: 0 25rpx;
}
.main .main_box .list_box {
  width: 100%;
  background-color: #fff;
}
.main .main_box .list_box .top_img {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
  margin: 15rpx 0;
  overflow: hidden;
}
.main .main_box .list_box .top_img swiper {
  width: 100%;
  height: 100%;
}
.main .main_box .list_box .top_img swiper swiper-item {
  width: 100%;
  height: 100%;
}
.main .main_box .list_box .top_img swiper swiper-item ._img {
  width: 100%;
  height: 100%;
}
.main .main_box .list_box .title {
  padding: 20rpx;
}
.main .main_box .list_box .title .name {
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
}
.main .main_box .list_box .title .business_time {
  color: #999;
  margin: 10rpx 0;
  font-size: 20rpx;
}
.main .main_box .list_box .title .arrtive {
  margin: 20rpx 0;
  color: #616060;
}
.main .main_box .list_box .title .arrtive ._span {
  margin-left: 15rpx;
}
.main .main_box .list_box .title .phone {
  color: #616060;
}
.main .main_box .list_box .title .phone ._span {
  margin-left: 15rpx;
}
.main .main_box .list_box .title .money {
  font-size: 20rpx;
  color: #999;
}
.main .main_box .list_box .title .money ._span {
  color: #f08d8f;
  font-size: 30rpx;
  margin-right: 10rpx;
  font-weight: 700;
}
.main .main_box .titles {
  background-color: #fff;
  margin-top: 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}
.main .main_box .titles .title_tops {
  height: 60rpx;
}
.main .main_box .money-time {
  background-color: #fff;
  margin: 50rpx 0;
  border-radius: 15rpx;
  padding: 20rpx 40rpx;
}
.main .main_box .money-time .host-time {
  display: flex;
  height: 80rpx;
  align-items: center;
}
.main .main_box .money-time .host-time ._img {
  width: 8%;
  height: 50rpx;
}
.main .main_box .money-time .host-time .icon_tit {
  margin-left: 20rpx;
  width: 90%;
}
.main .main_box .money-time .changdi {
  display: flex;
  height: 80rpx;
  align-items: center;
}
.main .main_box .money-time .changdi ._img {
  width: 8%;
  height: 50rpx;
}
.main .main_box .money-time .changdi .changdis {
  margin-left: 20rpx;
  width: 90%;
  display: flex;
}
.main .main_box .money-time .changdi .changdis view {
  padding: 15rpx;
  margin-right: 15rpx;
}
.main .main_box .money-time .changdi .changdis .tab {
  border: 1px solid #10b964;
  color: #10b964;
}
.main .main_box .btn button {
  background-color: #10b964;
  color: #fff;
}

