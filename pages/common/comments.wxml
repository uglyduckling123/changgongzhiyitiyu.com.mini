<view class="main">
    <view class="list_data">
        <view class="list">
            <view data-event-opts="{{[['tap',[['appoint',['$event']]]]]}}" class="list_item" bindtap="__e">
                <view class="top">
                    <view class="crash">
                        <view class="dist">
                            <text>预约时段：</text>
                            <view class="list_timepop">
                                <block wx:for="{{changguanList.make_data}}" wx:for-item="item" wx:for-index="index" wx:key="index">
                                    <view>{{''+changguanList.make_year+" "+item.make_time+''}}</view>
                                </block>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="middle">
                    <view class="middle_left">
                        <image src="{{img.cover_image}}" alt class="_img"></image>
                    </view>
                    <view class="middle_right">
                        <view class="title_h1">{{''+img.name+''}}</view>
                        <view>
                            <text>场地：</text>{{changguanList.name}}
                        </view>
                        <view class="popsp">
                            <view class="_p">场次：</view>
                            <view class="post">
                                <block wx:for="{{changguanList.listHost}}" wx:for-item="items" wx:for-index="__i0__" wx:key="id">
                                    <view class="_p">{{''+items+''}}</view>
                                </block>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <block wx:if="{{changguanList.is_pay==1}}">
        <view class="host_pop">
            <view class="women">
                <view class="women_item">
                    <view class="women-ren">
                        <view class="fz">预约费用</view>
                    </view>
                    <block wx:if="{{yue!=0.0}}">
                        <view class="yue">
                            <view class="left-yue">
                                <u-icon vue-id="7121c692-1" name="red-packet" size="35rpx" bind:__l="__l"></u-icon>
                                <view>余额支付
                                    <label class="_span">{{"("+yue+")"}}</label>
                                </view>
                            </view>
                            <view class="right-yue">
                                <view class="_p">{{"￥"+changguanList.member_priceNum}}</view>
                                <label class="radio">
                                    <radio value="1" checked="{{xuanzhong==='1'}}" data-event-opts="{{[['tap',[['radio',['1']]]]]}}" bindtap="__e"></radio>
                                </label>
                            </view>
                        </view>
                    </block>
                    <block wx:if="{{yue==0.0}}">
                        <view data-event-opts="{{[['tap',[['go',['$event']]]]]}}" class="yue" bindtap="__e">
                            <view class="left-yue">
                                <u-icon vue-id="7121c692-2" name="red-packet" size="35rpx" bind:__l="__l"></u-icon>
                                <view>余额支付
                                    <label class="_span">{{"("+yue+")"}}</label>
                                </view>
                            </view>
                            <view class="right-yue">
                                <label class="_span">余额付款，立即充值</label>>
                            </view>
                        </view>
                    </block>
                    <view class="yue">
                        <view class="left-yue">
                            <image src="{{$root.m0}}" alt class="_img"></image>
                            <view>微信支付</view>
                        </view>
                        <view class="right-yue">
                            <view class="_p">{{"￥"+changguanList.wrong_member_priceNum}}</view>
                            <label class="radio">
                                <radio value="2" checked="{{xuanzhong==='2'}}" data-event-opts="{{[['tap',[['radio',['2']]]]]}}" bindtap="__e"></radio>
                            </label>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
    <button data-event-opts="{{[['tap',[['successList',['$event']]]]]}}" class="btn" bindtap="__e">确认订单</button>

    <block wx:if="{{succes}}">
        <view class="tanchu">
            <view class="box">
                <view class="box-img">
                    <image src="{{$root.m1}}" alt class="_img"></image>
                    <view>预约成功</view>
                </view>
                <view class="button">
                    <button data-event-opts="{{[['tap',[['zhidaole',['$event']]]]]}}" bindtap="__e">首页</button>
                    <button data-event-opts="{{[['tap',[['xiangq',['$event']]]]]}}" class="qued" bindtap="__e">查看预约</button>
                </view>
            </view>
        </view>
    </block>
</view>