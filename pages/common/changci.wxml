        <view class="time_boxP">
            <scroll-view class="scroll-view_HU" scroll-x="true">
                <block wx:for="{{dataChangguan}}" wx:for-item="item" wx:for-index="index" wx:key="index">
                    <view class="scroll-view-item_HU" id="demo1">
                        <view class="host_list">
                            <view class="changdi_top">
                                {{''+item.seat_name+''}}
                            </view>
                            <view class="btns">
                                <block wx:for="{{item.label}}" wx:for-item="list" wx:for-index="indexs" wx:key="indexs">
                                    <button data-event-opts="{{[['tap',[['clocrIndex',['$0','$1',indexs],[[['dataChangguan','',index]],[['dataChangguan','',index],['label','',indexs]]]]]]]}}" class="{{[list.status==0?'green':list.status==1?'hui':list.status==2?'red':list.status==3&&isShow&&list.is_real==1?'green':'hui']}}" style="{{(list.flge==true?'background-color: #FF822E;':'')}}" bindtap="__e">
                                        <view class="button-content">
                                            <text class="price">￥{{list.member_price}}</text>
                                            <u-icon style="{{(list.status!=2?'opacity: 0;':'')}}" vue-id="{{'67664776-1-'+index+'-'+indexs}}" name="checkbox-mark" color="#fff" bind:__l="__l"></u-icon>
                                        </view>
                                    </button>
                                </block>
                            </view>
                        </view>
                    </view>
                </block>
            </scroll-view>
        </view>
    </view>
    <view class="bottom">
        <view class="btn_host">
            <view class="one">
                <view></view>
                <label class="_span">
                    已预订
                </label>
            </view>
            <view class="two">
                <view></view>
