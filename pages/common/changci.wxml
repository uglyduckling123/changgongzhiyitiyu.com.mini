            </view>
            <view class="three">
                <view></view>
                <label class="_span">
                    已选择
                </label>
            </view>
            <view class="four">
                <view>
                    <u-icon vue-id="67664776-2" name="checkbox-mark" color="#fff" bind:__l="__l"></u-icon>
                </view>
                <label class="_span">
                    我的预订
                </label>
            </view>
        </view>
        <view class="tis">
            {{''+tis+''}}
        </view>
        <button data-event-opts="{{[['tap',[['goyuyue',['$event']]]]]}}" bindtap="__e">
            提交订单
        </button>
    </view>
