.main {
  background-color: #eee;
  height: 1310rpx;
}
.main .user_info {
  padding: 10rpx 10rpx;
  background: linear-gradient(to right, #48e68f, #4ac358);
  height: 270rpx;
}
.main .user_info .info {
  margin-top: 40rpx;
  display: flex;
}
.main .user_info .info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 22rpx;
}
.main .user_info .info .right {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
  padding: 5rpx 30rpx;
  letter-spacing: 3rpx;
}
.main .user_info .info .right .nickname {
  font-size: 32rpx;
}
.main .user_info .info .right .login {
  font-size: 33rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
  margin-top: 25rpx;
  margin-left: 10rpx;
  width: 400rpx;
}
.main .user_info .info .sign_in {
  width: 75rpx;
  height: 75rpx;
  margin-top: 20rpx;
}
.main .user_score {
  margin-left: 20rpx;
  background-color: #fff;
  width: 710rpx;
  height: 160rpx;
  position: fixed;
  top: 200rpx;
  border-radius: 10rpx;
  display: flex;
}
.main .user_score image {
  width: 70rpx;
  height: 70rpx;
  margin: 50rpx 35rpx;
}
.main .user_score .middle {
  margin-left: 30rpx;
  font-weight: bold;
}
.main .user_score .middle view:nth-child(1) {
  font-size: 40rpx;
  margin-top: 38rpx;
}
.main .user_score .middle view:nth-child(2) {
  font-size: 26rpx;
  color: #CDCDCD;
}
.main .user_score view:nth-child(3),
.main .user_score view:nth-child(4) {
  margin-top: 58rpx;
  margin-left: 100rpx;
}
.main .content {
  margin-top: 30rpx;
  padding: 90rpx 20rpx 10rpx;
}
.main .content .menu {
  border-radius: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.main .content .menu .item {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: #eee solid 2rpx;
  border-radius: 10rpx;
}
.main .content .menu .item .left {
  display: flex;
}
.main .content .menu .item .left image {
  width: 50rpx;
  height: 50rpx;
  margin: 22rpx 25rpx;
}
.main .content .menu .item .right {
  margin-right: 30rpx;
}
.main .customer_service {
  font-size: 26rpx;
  font-weight: bold;
  background-color: #F8F8F8;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 5rpx 30rpx;
  margin-left: 100rpx;
  margin-top: 30rpx;
}
.main .customer_service image {
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx 0;
}

